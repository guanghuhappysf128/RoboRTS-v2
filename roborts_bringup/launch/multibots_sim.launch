<launch>
    <arg name="map" value="icra2019"/>
    <master auto="start"/>

    <param name="/use_sim_time" value="true"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="false"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="namespace" default=""/>

    <!-- launch the ICRA gazebo world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find roborts_gazebo)/worlds/2019_ICRA_3D_MAP.world"/>
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="verbose" value="$(arg verbose)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

    <!-- load roborts parameters -->
    <rosparam command="load" file = "$(find roborts_bringup)/config/roborts_sim.yaml"/>

    <arg name="model" value="$(find roborts_gazebo)/robots/infantry.xacro" />
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />
    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find roborts_bringup)/maps/$(arg map).yaml" respawn="false" />
    
    <!-- Run the rviz -->
    <include file="$(find roborts_bringup)/launch/multibots_rviz.launch">
        <arg name="namespace" value="r1"/>
    </include>
    <!-- Run Navigation -->
    <include file="$(find roborts_bringup)/launch/multibots_one_bot.launch">
        <arg name="namespace" value="r1"/>
        <arg name="pos_x" value="1"/>
        <arg name="pos_y" value="1"/>
        <arg name="pos_R" value="0"/>

        <!-- <arg name="visualize" value="true"/> -->
    </include>

   
    <include file="$(find roborts_bringup)/launch/multibots_one_bot.launch">
        <arg name="namespace" value="r2"/>
        <arg name="pos_x" value="4"/>
        <arg name="pos_y" value="0.5"/>
        <arg name="pos_R" value="0"/>
    </include>

   
    <include file="$(find roborts_bringup)/launch/multibots_one_bot.launch">
        <arg name="namespace" value="r3"/>
        <arg name="pos_x" value="0.5"/>
        <arg name="pos_y" value="4"/>
        <arg name="pos_R" value="0"/>
        <arg name="led_color" value="Blue"/>
    </include>

    <!-- Run Navigation -->
    <include file="$(find roborts_bringup)/launch/multibots_one_bot.launch">
        <arg name="namespace" value="r4"/>
        <arg name="pos_x" value="7"/>
        <arg name="pos_y" value="4.5"/>
        <arg name="pos_R" value="0"/>
        <arg name="led_color" value="Blue"/>
    </include>

    <!-- To run with decision node, we need to run on a separate terminal
        export ROS_NAMESPACE='/r1'
        rosrun roborts_decision behavior_test_node
    -->
      
</launch>
